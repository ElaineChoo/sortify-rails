<h1>Listing genres</h1>

<%= link_to 'New Genre', new_genre_path %> 
<table>
  <tr>
    <th>Genres</th>
    <th>Description</th>
    <th colspan="3"></th>
  </tr>
 
  <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
      <td><%= genre.description %></td>
      <td><%= link_to 'Show', genre_path(genre) %></td>
      <td><%= link_to 'Edit', edit_genre_path(genre) %></td>
      <td><%= link_to 'Destroy', genre_path(genre),
                                        method: :delete,
                                        data: {confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
<%= link_to 'Back', genres_path %>